{
  "name": "grammar-highlighter-desktop",
  "version": "2.0.0",
  "description": "Desktop application for analyzing PDFs and web pages with NLP-powered grammar highlighting",
  "main": "electron-main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "keywords": [
    "grammar",
    "NLP",
    "PDF",
    "OCR",
    "highlighting"
  ],
  "author": "Your Name",
  "license": "MIT",
  "homepage": "https://dnaicker.github.io/Document-X-Ray-Analyzer",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "pdfjs-dist": "^3.11.174",
    "tesseract.js": "^5.0.4",
    "epubjs": "^0.3.93",
    "mammoth": "^1.6.0",
    "jszip": "^3.10.1"
  },
  "build": {
    "appId": "com.grammarhighlighter.desktop",
    "productName": "Grammar Highlighter",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron-main.js",
      "src/**/*",
      "lib/**/*",
      "assets/**/*",
      "!**/*.map",
      "!node_modules/**/*",
      "!dist/**/*",
      "!.git/**/*"
    ],
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg",
      "identity": null,
      "gatekeeperAssess": false,
      "hardenedRuntime": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.inherit.plist"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icons/icon.png"
    }
  }
}

